<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="LinearProgress" parent="Base.Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:theme">@style/Widget.AppCompat.ProgressBar.Horizontal</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:progressBackgroundTint">@color/colorPrimaryDark</item>
    </style>

    <style name="MaterialProgress" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:theme">@style/Widget.MaterialProgressBar.ProgressBar.Horizontal</item>
        <item name="android:progressBarStyle">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
</resources>